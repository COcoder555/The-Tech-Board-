<div>
     <h3>Post Title: {{title}}</h3>
     <h4>User: {{user.userName}}</h4>
     <p>{{content}}</p>
     <p2>{{createdAt}}</p2>
     {{#each comments as |comment|}}
<div>
     <h3>Comments:</h3>
     <h4> User: {{comment.user.userName}}</h4>
     <p>
          {{comment.content}}
             <button class="btn btn-sm btn-danger commentBtn " data-id="{{comment.id}}">DELETE</button>
              <button  class="btn btn-sm btn-danger updateBtn " data-id="{{comment.id}}">UPDATE</button>
     </p>


</div>
{{/each}}
</div>
  
 
